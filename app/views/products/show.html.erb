<h1><%= @product.name %></h1>
<div class="row">
	<div class="small-11 small-centered-columns	databox">
		<div class="imagefull">
			<%= link_to image_tag(@product.image.url(:medium)), @product.image.url %>
		</div>
		<p><%= raw @product.description %></p>
		<h3><%= number_to_currency(@product.price, :unit => "$") %></h3>
		<%= link_to 'Buy', {:controller => 'orders', :action => 'buy'}, {:class => 'button'} %>
		<%= link_to 'Add to Cart', { :controller => 'orders', :action => 'add' }, {:class => 'button' }%>
	</div>
</div>