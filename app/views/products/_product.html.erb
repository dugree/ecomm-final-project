<div class="row">
	<div class="small-11 small-centered-columns product">
		<div class="product-text">
			<h2><%= link_to product.name, product %></h2>
			<p class="price">Price: <%= number_to_currency(product.price, :unit => "$") %></p>
		</div>
	<div class="image"><%= link_to image_tag(product.image.url(:thumb)), product %></div>

</div>
</div>