
		<h1>Review Order</h1>
		<div class="row">
			<div class="small-11 small-centered-columns orderbox">
		<table id="order-review">
		  <tr>
		  	<th>Item</th>
		  	<th>Price</th>
		  	<th>Quantity</th>
		  </tr>
		<% @items.each do |item| %>
		  <tr>
		  	<td><%= Product.find(item['id']).name %></td>
		  	<td><%= number_to_currency(Product.find(item['id']).price, :unit => "$") %></td>
		  	<td><%= number_field_tag "quantity#{item['id']}", item['quantity'] %></td>	
		  </tr>
		<% end %>
		</table>
		<%= submit_tag "Confirm" %>
	</div>
</div>